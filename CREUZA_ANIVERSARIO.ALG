algoritmo "creuza_aniversario"
var
   ano_nasc, ano_atual, idade:inteiro
inicio
      escreva("Que ano voce nasceu? ")
      leia(ano_nasc)
      escreva("Que ano estamos? ")
      leia(ano_atual)
      
      idade <- ano_atual - ano_nasc
      
      escreval()
      escreva("Sua idade atual e de aproximadamente ",idade)
      escreval()
      
fimalgoritmo